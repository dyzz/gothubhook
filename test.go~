package hook

import (
	"net/http"
)

type Event struct {
	Owner      string
	Repo       string
	Branch     string
	Commit     string
	Type       string
	BaseOwner  string
	BaseRepo   string
	BaseBranch string
}

type Server struct {
	Port   int
	Path   string
	Secret string
	Events chan Event
}

func NewServer() *Server {
	return &Server{
		Port:   80,
		Path:   "/hook",
		Events: make(chan Event),
	}
}

func (srv *Server) Listen() error {

}
